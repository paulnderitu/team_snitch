<h1>Edit School</h1>

  <% if @school.errors.any? %>
    <h3>Please fix these errors:</h3>
    <ul>
      <% @school.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_for @school do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :link %>
    <%= f.text_field :link %>
    <%= f.submit %>
  <% end %>
